{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "dom-renderer",
    "lib": ["ES2023", "DOM"],
  },
  "include": ["source/**/*"],
}
